---
title: ラバーバンドshop
layout: layout.njk
csspath: ./css/
jspath: ./js/
---
<main class="main">
	<div class="main__inner">
		<h2 class="main__title">Goods Lineup</h2>
		<div class="item main__flex">
			{% for item in goods %}
				<a class="item__link" href="./item/{{ item.url }}"> 
					<div class="itemanime">
						<img class="item__img" src="./images/{{item.itemphotos[0]}}" alt="">
					</div>
					<p class="item__text">{{ item.name }} </p>
					<p class="item__text item__artist">{{item.Artist}}</p>
					<p class="item__text">¥{{item.price}}</p>
					<p class="item__text item__state">{{item.state}}</p>
				</a>
			{% endfor %}
		</div>
		<button class = "main__viewbutton">view more</button>
	</div>
</main>